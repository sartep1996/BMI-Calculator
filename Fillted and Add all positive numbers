package com.petras;

import java.util.Arrays;

public class Main {

    public static void main(String[] args) {

        int[] numbers = {1,-4,7,12};
        System.out.println(Arrays.toString(Arrays.stream(numbers).filter(i -> i > 0).toArray()));
        System.out.println(Arrays.stream(numbers).filter(v -> v > 0).sum());



    }
}
